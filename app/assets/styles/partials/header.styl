.header
    background: $color-dark
    width: 100%
    position: fixed
    top: 0
    z-index: 10

    &__content
        section-content()
        padding: 10px 5px 0 10px
        position: relative
        height: $header-height

    &__logo-link
        display: inline-block

    &__nav
        position: absolute
        left: 205px
        bottom: 0
        cursor: pointer

    &__nav-btn
        display: none

@media $media-mobile

   .header
       &::before
           content: ''
           position: absolute
           top: 0
           bottom: 0
           left: 0
           right: 0
           background: $color-dark
           z-index: 5

       &__logo-link
           position: relative
           z-index: 5

       &__nav
           transform: translateY(-100%)
           z-index: 1
           top: $header-height
           bottom: auto
           left: 0
           right: 0
           transition: transform $animation-time $timing-function

           ^[0]_nav-open &
               transform: translateY(0)
               box-shadow: 0 2px 4px 0 rgba(0,0,0, .3)

       &__nav-btn
           display: block
           box-sizing: border-box
           width: 35px
           height: 35px
           position: absolute
           z-index: 5
           right: 15px
           top: 50%
           margin-top: -(@height / 2)
           overflow: hidden
           border: 1px solid $color-white
           border-radius: 2px
           cursor: pointer

           &::before
           &::after
               content: ''
               position: absolute
               top: 21px
               left: 4px
               width: 14px
               height: 2px
               border-radius: 2px
               background-color: $color-white
               transform-origin: 13px 50%

           &::before
               transform: rotate(45deg)

           &::after
               transform: rotate(135deg)

           ^[0]_nav-open &
               &::before
               &::after
                   top: 18px

               &::before
                   left: 12px

               &::after
                   left: -5px
