.header
    background: $color-dark
    width: 100%
    position: fixed
    top: 0
    z-index: 10
    height: $header-height

    &__content
        margin: 0 auto
        max-width: $grid-hd
        box-sizing: border-box
        padding: 10px 5px

    &__logo-link
        display: inline-block

    &__nav
        display: none
