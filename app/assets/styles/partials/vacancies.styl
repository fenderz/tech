.vacancies
    text-align: left

    &__row
        margin-bottom: 20px

    &__department
        display: inline-block
        vertical-align: top
        box-sizing: border-box
        width: 35.5%
        padding-right: 50px
        font-size: 14px
        font-family: $font-family-lato
        color: $color-grey

    &__list
        display: inline-block
        vertical-align: top
        box-sizing: border-box
        width: 34%

        &-item
            cursor: pointer
            margin-bottom: 10px
            color: $color-blue
            font-size: 18px
            font-family: $font-family-lato-light
            transition: color $animation-time $timing-function

            &:hover
                color: $color-red

@media $media-mobile
   .vacancies
       &__department
           display: none

       &__list
           display: block
           width: 100%