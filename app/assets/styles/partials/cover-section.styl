.cover-section
    height: $cover-height
    overflow: hidden
    position: relative

    &__content
        section-content()
        position: relative
        text-align: center
        height: $cover-height

        &::before
            content: ''
            height: $cover-height
            display: inline-block
            vertical-align: middle

    &__title
        title(1)
        color: $color-white
        letter-spacing: 2px

    &__cover
        background: url($bg-url + 'cover.jpg') no-repeat 50% 0;
        background-size: cover
        height: $cover-height + 100px
        position: absolute
        width: 100%
        top: -50px

    &__cover-container
        display: inline-block
        vertical-align: middle
