.page-section
    &__content
        section-content()
        position: relative
        text-align: center
        padding: 50px 85px 70px

        &_underline
            border-bottom: 1px solid $color-border-gray

    &__title
        title(2)
        margin-bottom: 20px

    &__text
        title(3)
        color: $color-gray
        margin-bottom: 40px

    //MOD Events block
    &_events
        & ^[0]__content
            padding: 50px 0 70px

    //MOD Video block
    &_video
        background: $color-soft-gray

        & ^[0]__content
            padding: 50px 0 70px

@media $media-tablet
    .page-section
        &__content
            padding: 30px 50px

@media $media-mobile
    .page-section
        min-width: 300px

        &__content
            padding: 30px 18px

        &__title
            margin-bottom: 20px

        &__text
            margin-bottom: 40px
