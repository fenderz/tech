// Mixins

// Titles
title($level = 1, $lineHeight = 1.3,  $fontFamily = $font-family-lato-light)

    if $level == 1
        $fontSize = $font-size-1
    else if $level == 2
        $fontSize = $font-size-2
    else if $level == 3
        $fontSize = $font-size-3

    font-weight: 400
    font-size: $fontSize
    line-height: $lineHeight
    font-family: $fontFamily

    @media $media-mobile
        if $level == 1
            $fontSize = $font-mobile-size-1
        else if $level == 2
            $fontSize = $font-mobile-size-2
            $fontFamily = $font-family-lato-bold
        else if $level == 3
            $fontSize = $font-mobile-size-3
            $fontFamily = $font-family-lato

        font-size: $fontSize
        font-family: $fontFamily

// Titles
section-content()
    margin: 0 auto
    max-width: $grid-hd
    box-sizing: border-box

// Link
link($color = $color-blue)
    cursor: pointer
    text-decoration: none
    color: $color
    border-bottom: 1px solid transparent
    transition: border-color $animation-time $timing-function

    &:hover
        border-color: $color