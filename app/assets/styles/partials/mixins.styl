// Mixins

// Titles
title($level = 1, $lineHeight = 1.3,  $fontFamily = $font-family-lato-black)

    if $level == 1
        $fontSize = $font-size-1
        $lineHeight = $line-height-1
    else if $level == 2
        $fontSize = $font-size-2
        $lineHeight = $line-height-2
    else if $level == 3
        $fontSize = $font-size-3
        $lineHeight = $line-height-3
    else if $level == 4
        $fontSize = $font-size-4
        $fontFamily = $font-family-lato
        $lineHeight = $line-height-4

    font-weight: 400
    font-size: $fontSize
    line-height: $lineHeight
    font-family: $fontFamily

    @media $media-mobile
        if $level == 1
            $fontSize = $font-mobile-size-1
        else if $level == 2
            $fontSize = $font-mobile-size-2
            $fontFamily = $font-family-lato-bold
        else if $level == 3
            $fontSize = $font-mobile-size-3
            $fontFamily = $font-family-lato

        font-size: $fontSize
        font-family: $fontFamily

// Titles
section-content()
    margin: 0 auto
    max-width: $grid-hd
    box-sizing: border-box
    padding-left: $side-offset-hd
    padding-right: $side-offset-hd

    @media $media-tablet
        padding-left: $side-offset-tablet
        padding-right: $side-offset-tablet

    @media $media-mobile
        padding-left: $side-offset-mobile
        padding-right: $side-offset-mobile

// Link
link($color = $color-blue)
    cursor: pointer
    text-decoration: none
    color: $color

    &:hover
        color: $color-red