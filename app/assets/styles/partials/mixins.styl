// Mixins

// Titles
title($level = 1, $lineHeight = 1.3,  $fontFamily = $font-family-lato-light)

    if $level == 1
        $fontSize = $font-size-1
    else if $level == 2
        $fontSize = $font-size-2
    else if $level == 3
        $fontSize = $font-size-3

    font-weight: 400
    font-size: $fontSize
    line-height: $lineHeight
    font-family: $fontFamily