.form
    padding: 60px 80px 45px
    border-radius: 5px
    border: 2px solid $color-border-gray

    &__row
        margin-bottom: 20px

        &:last-child
            margin-bottom: 0

        &-checkbox-wrap
            position: absolute
            left: 0
            top: 0

        &_center
            text-align: center

        &_legal-info
            padding-left: 40px
            position: relative

    &__text
        color: $color-gray
        font-size: $font-size-4
        padding-bottom: 10px

    &__input
    &__textarea
        border-radius: 5px
        border: 1px solid $color-border-gray
        box-sizing: border-box
        display: block
        width: 100%
        padding: 15px
        font-family: $font-family-lato-light
        font-size: 18px
        transition: border-color $animation-time $timing-function

        &:focus
            outline: none
            border-color: $color-blue

    &__textarea
        resize: vertical
        min-height: 180px