.checkbox
    border-radius: 5px
    border: 1px solid $color-border-gray
    width: 25px
    height: 25px
    display: block
    cursor: pointer
    overflow: hidden

    &__input
        visibility: hidden
        position: absolute

        &:checked + .checkbox__label
            background: $color-blue

    &__label
        display: block
        width: 100%
        height: 100%
