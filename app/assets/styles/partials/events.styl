.events
    padding: 20px 0 0
    text-align: left

    &__item
        display: inline-block
        vertical-align: top
        width: 31%
        margin-right: 3.5%
        transition: opacity $animation-time $timing-function

        ^[0]_inner &
            margin-bottom: 35px

        &:nth-child(3n+3)
            margin-right: 0

        &_archive
            opacity: 0.6

            &:hover
                opacity: 1

    &__img-link
        display block
        margin-bottom: 20px

    &__img
        display: block
        max-width: 100%
        height: auto

    &__row
        margin-top: 5px
        font-family: $font-family-lato

    &__date
        display: inline-block
        vertical-align: baseline
        font-size: 20px
        margin-right: 5px

    &__reg-label
    &__reg-disabled
        text-decoration: none
        display: inline-block
        vertical-align: baseline
        font-size: 16px

    &__reg-label
        color: $color-green

    &__reg-disabled
        color: $color-grey-40

    &__name
        link()
        title(3)

@media $media-mobile
   .events
       white-space: normal
       padding-top: 0

       &__item
           width: auto
           display: block
           margin: 0 0 7% !important

           &:last-child
               margin-bottom: 0 !important

       &__img-link
           margin-bottom: 0