.social-share
    list-style-type: none
    font-size: 0
    text-align: center

    &__button
        margin-right: 8px
        margin-left: 8px
        display: inline-block
        vertical-align: middle

        &-svg
            color: $color-blue
            width: 55px
            height: 55px
            cursor: pointer

            &:hover
                color: $color-red

@media $media-mobile

    .social-share

        &__button
            margin-bottom: 12px
            margin-right: 5px
            margin-left: 5px

            &-svg
                width: 45px
                height: 45px
